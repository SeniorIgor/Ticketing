{
  "name": "@org/auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "application",
  "implicitDependencies": ["@org/core"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "platform": "node",
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "bundle": true,
        "externalDependencies": "none",
        "format": ["cjs"]
      },
      "configurations": {
        "watch": {
          "watch": true,
          "sourcemap": true,
          "cache": false
        }
      }
    },
    "dev": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@org/auth:build:watch",
        "watch": true,
        "inspect": false
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": ["nx run @org/core:build:watch", "nx run @org/auth:dev"]
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node apps/auth/dist/index.cjs"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "apps/auth"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "tsc --noEmit -p tsconfig.app.json",
        "cwd": "apps/auth"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/auth/jest.config.cts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["npm:private"]
}
