{
  "name": "@org/auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "platform": "node",
        "outputPath": "apps/auth/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "bundle": true,
        "format": ["cjs"]
      },
      "configurations": {
        "watch": {
          "watch": true,
          "sourcemap": true
        }
      }
    },
    "dev": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "@org/auth:build:watch",
        "watch": true,
        "inspect": false
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node apps/auth/dist/index.cjs"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "apps/auth"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.app.json",
        "cwd": "apps/auth"
      }
    }
  },
  "tags": ["npm:private"]
}