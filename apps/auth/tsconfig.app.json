{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "paths": {
    "@org/core": [
      "packages/core/src/index.ts"
    ],
    "@org/test-utils": [
      "packages/test-utils/src/index.ts"
    ]
  },
  "references": [
    {
      "path": "../../packages/core/tsconfig.lib.json"
    },
    {
      "path": "../../packages/test-utils/tsconfig.lib.json"
    }
  ]
}