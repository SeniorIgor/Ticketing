{
  "name": "@org/contracts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "format": [
          "esm"
        ],
        "declarationRootDir": "{projectRoot}/src"
      },
      "configurations": {
        "watch": {
          "watch": true,
          "sourcemap": true,
          "cache": false
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "^build"
      ],
      "options": {
        "command": "tsc --noEmit -p tsconfig.lib.json",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": [
    "npm:private"
  ]
}