{
  "name": "@org/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/core/dist",
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "format": [
          "esm"
        ],
        "declarationRootDir": "packages/core/src"
      },
      "configurations": {
        "watch": {
          "watch": true,
          "sourcemap": true,
          "cache": false
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "packages/core"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.lib.json",
        "cwd": "packages/core"
      }
    }
  },
  "tags": [
    "npm:private"
  ]
}